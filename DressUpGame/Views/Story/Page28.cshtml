@{
	ViewBag.Title = "Dress Up Game";
}
@model Scene

<!DOCTYPE html>
<html>
<head>
	<title>@ViewBag.Title</title>
</head>
<body>
	<div class="ad">
		<!-- Add your ad content here -->
		<h2>Ad Space</h2>
		<p>This is an advertisement.</p>
	</div>

	<div class="game-container">
		<img src="@Url.Content(Model.BackgroundImgURL)" alt="Scene Image" class="scene-image" />


		<div class="Btn-bottom">

			<a asp-controller="Story" asp-action="Page24" class="btn btn-primary mx-2">Prev</a>

			<a asp-controller="Story" asp-action="Page26" class="btn btn-primary mx-2">Next</a>


		</div>
		<div class="text-container">
			<p class="character-name">
				<b>
					Benjamin

				</b>
			</p>
			<p class="dialogue">
				My name is Benjamin or Benji for short.

			</p>
		</div>
	</div>

	<div class="ad">
		<!-- Add your ad content here -->
		<h2>Ad Space</h2>
		<p>This is an advertisement.</p>
	</div>

	<div class="clear"></div>
</body>
</html>
