
@{
    ViewBag.Title = "Dress Up Game";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <style>
        /* Add your CSS styles for the dress-up game here */
        
        
    </style>
</head>
<body>
    <div class="ad">
        <!-- Add your ad content here -->
        <h2>Ad Space</h2>
        <p>This is an advertisement.</p>
    </div>

    <div class="game-container">
        <div>
            <h1>Story Introduction</h1>
            <p>@ViewBag.Index</p>
        </div>
        <!-- Add your dress-up game content here -->
        <h1>Dress Up Game</h1>
        <p>This is where the dress-up game would go.</p>
        <div>


            @using (Html.BeginForm("Prev", "StoryController", FormMethod.Post))
            {
                <button type="submit">Previous</button>
            }

            @using (Html.BeginForm("Next", "StoryController", FormMethod.Post))
            {
                <button type="submit">Next</button>
            }
        </div>
    </div>

    <div class="ad">
        <!-- Add your ad content here -->
        <h2>Ad Space</h2>
        <p>This is an advertisement.</p>
    </div>

    <div class="clear"></div>
</body>
</html>
